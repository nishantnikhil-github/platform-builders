{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-central-1",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "platform-builders-jenkins",
		"tags" : {
			"Name": "Platform Builders API",
			"owner": "Platform Builders"
		},
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    }
  }],
  "provisioners": [{
    "type": "ansible",
    "extra_arguments": "-b",
    "playbook_file": "./jenkins.yml"
  }]
}
